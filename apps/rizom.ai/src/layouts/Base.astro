---
import '../styles/globals.css'

interface Props  {
  logoLink?: string;
  title: string
}

const title = "Rizom.ai"

---

<html lang="en" transition:animate="none">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={title}
      href={new URL("rss.xml", Astro.site)}
/>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <slot name="og:data" />
    <title>{title}</title>
  </head>
  <body class="bg-white flex flex-col justify-between font-sans md:text-lg">
    <!-- <header class="z-10 fixed top-0 w-full"> -->
    <!-- </header> -->
  <slot/>
    <footer class="flex justify-between py-8 px-5 mx-auto w-full bg-gradient-to-tr from-primary via-primary via-65% to-secondary to-95%">

      <img class="w-[150px]" src="/Logo.svg" alt="Logo" />
    </footer>
    </body>
</html>

