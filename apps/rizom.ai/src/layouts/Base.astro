---
import '../styles/globals.css'

interface Props  {
  logoLink?: string;
  title: string
}

const title = "Rizom"
const description = "Rizom is an ecosystem architecture collective â€“ creating resilient communities bound by shared knowledge rather than physical space. We believe that as technology handles routine tasks, humans can focus on what they do best: creating, exploring, and solving puzzles together."
const url = Astro.url
const ogImageURL = '/offcourse/a83550a37981a557b2ae0aaef225a1f6/og.png'

---

<html lang="en" transition:animate="none">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={title}
      href={new URL("rss.xml", Astro.site)}
/>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta property="og:site_name" content={title} />
    <meta property="og:url" content={url.toString()} />
    <meta property="og:type" content={type} />
    <meta property="og:image" content={ogImageURL} />
    <meta name="og:description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={url.pathname} />
    <meta property="twitter:url" content={url.toString()} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />
    <slot name="og:data" />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-bl from-white via-secondary-light via-80% to-primary-light
flex flex-col justify-between font-sans md:text-lg min-h-screen">
    <header class="flex justify-between py-3 md:py-4 px-5 mx-auto w-full bg-gradient-to-br from-primary via-primary via-65% to-primary-light to-95%">

      <a href="/"><img class="w-[75px] md:w-[100px]" src="/Logo.svg" alt="Logo" /></a>
      <a href="/rsvp" class="self-center w-auto text-white hover:text-secondary font-bold">Join</a>
    </header>
  <slot/>
    </body>
</html>

